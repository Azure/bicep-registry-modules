      },
      "copy": {
        "count": "[length(parameters('images'))]",
        "input": {
          "originalImage": "[parameters('images')[copyIndex()]]",
          "acrHostedImage": "[format('{0}{1}', reference('acr').loginServer, string(skip(parameters('images')[copyIndex()], indexOf(parameters('images')[copyIndex()], '/'))))]"
        }
      }
    }
  }
