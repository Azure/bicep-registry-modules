      "properties": {
        "forceUpdateTag": "[parameters('forceUpdateTag')]",
        "azCliVersion": "2.52.0",
        "timeout": "PT30M",
        "retentionInterval": "PT1H",
        "storageAccountSettings": "[if(not(equals(parameters('storageAccountName'), '')), createObject('storageAccountName', parameters('storageAccountName')), createObject())]",
        "containerSettings": "[if(not(equals(parameters('subnetId'), '')), createObject('subnetIds', createArray(createObject('id', parameters('subnetId')))), createObject())]",
        "environmentVariables": [
          {
            "name": "acrName",
