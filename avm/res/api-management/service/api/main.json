        "type": "[parameters('type')]",
        "value": "[if(not(empty(parameters('value'))), parameters('value'), null())]",
        "wsdlSelector": "[parameters('wsdlSelector')]"
      }
    },
    {
      "copy": {
        "name": "policy",
