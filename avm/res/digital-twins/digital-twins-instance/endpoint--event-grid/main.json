      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Optional. Dead letter storage secret for key-based authentication. Will be obfuscated during read."
      }
    },
    "deadLetterUri": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Optional. Dead letter storage URL for identity-based authentication."
      }
    }
