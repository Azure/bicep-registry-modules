      "type": "string",
      "metadata": {
        "description": "Required. EventGrid Topic Endpoint."
      }
    },
    "eventGridDomainResourceId": {
      "type": "string",
      "metadata": {
        "description": "Required. The resource ID of the Event Grid to get access keys from."
      }
