  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Required. The name of the custom domain."
      }
    },
    "profileName": {
      "type": "string",
      "metadata": {
        "description": "Required. The name of the CDN profile."
      }
    },
    "hostName": {
      "type": "string",
