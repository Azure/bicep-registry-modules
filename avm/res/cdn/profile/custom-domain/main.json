      "metadata": {
        "description": "Optional. The minimum TLS version required for the custom domain. Default value: TLS12."
      }
    },
    "secretName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Optional. The name of the secret. ie. subs/rg/profile/secret."
