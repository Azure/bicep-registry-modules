    },
    "customizedCipherSuiteSet": {
      "type": "object",
      "metadata": {
        "__bicep_resource_derived_type!": {
          "source": "Microsoft.Cdn/profiles/customDomains@2025-06-01#properties/properties/properties/tlsSettings/properties/customizedCipherSuiteSet"
