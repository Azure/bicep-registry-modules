{
  "copilot": {
    "coding_agent": {
      "enabled": true,
      "agent_name": "github-copilot",
      "mcp_servers": [
        {
          "name": "GitHub MCP",
          "type": "http",
          "url": "https://api.githubcopilot.com/mcp/"
        }
      ],
      "permissions": {
        "issues": true,
        "pull_requests": true,
        "code_writes": true
      },
      "notifications": {
        "on_completion": true,
        "on_error": true
      }
    }
  }
}